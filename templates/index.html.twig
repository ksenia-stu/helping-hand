{% extends "master.html.twig" %}

{% block title %}Home Page{% endblock %}




{% block banner %}
{% include ('banner.html.twig') %}
{% endblock %}

{% block content %}
<!--start of showcase-->

 

<div id="mainCont">
<!--About us -->
<div id="aboutUs">
<hr class="featurette-divider">

    <div class="row featurette">
      <div class="col-md-7">
        <h1 class="featurette-heading">About us</h1>
        <p class="lead">At Helping Hand we welcome and celebrate all people, and deliver personalised and professional services to meet the needs of older 
        people from all backgrounds. Our core values of compassion, respect, excellence and community show in everything we do.</p>
      </div>
      <div class="col-md-5">
        <img src="images/about.jpg" class="d-block w-100 myImg" alt="...">
      </div>
    </div>
  </div>

    <hr class="featurette-divider">

	<!-- Caregivers -->
    <h1 class="top-page-title text-center">Featured caregivers</h1>

  {% if caregivers %}
  <div class="container">
  <div class="row">
  {% for c in caregivers %}
    <div class="col-sm">
      <img src="/uploads/{{c.imagePath}}" class=" img-fluid img-thumbnail"> 
      <p class="card-text">{{c.firstName}} {{c.lastName}}</p>
      <p><a class="btn btn-secondary custom-button" href="/viewcaregiver/{{c.id}}" role="button">View</a></p>
    </div>
 
  {% endfor %}
   </div>
</div>
</div>
{% else %}
<p> There are no caregivers to show at the moment </p>
{% endif %}
 <hr class="featurette-divider">         
{% endblock %}

